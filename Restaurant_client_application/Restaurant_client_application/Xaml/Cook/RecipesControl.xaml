        <ListBox x:Name="ListBoxMenuItems" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" Height = "Auto" MinHeight="350" Width = "Auto" MinWidth="550" Margin="200,110,200,130"  Foreground="#DDD4BE75" FontSize="26" FontFamily="Gabriola" SelectionChanged="ListBoxMenuItems_SelectionChanged" Grid.ColumnSpan="2">
